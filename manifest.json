{
    "manifest_version": 2,
  
    "name": "Equify",
    "description": "Find products that support inclusivity and gender equity, and fight pink tax!",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "logo.png"
    },
    "permissions": [
     "activeTab"
   ],
   "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "css": ["script.css"],
      "js": ["script.js"]
    }
  ],
   "background": {
    "scripts": ["script.js"],
    "persistent": false
  }
}